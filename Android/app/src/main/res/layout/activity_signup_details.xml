<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Sign Up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_productivitypilot"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/signupWithEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up with Email"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/logoImageView"
            android:layout_marginBottom="25dp" />

        <EditText
            android:id="@+id/occupationEditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Occupation"
            android:inputType="text"
            android:drawableStart="@drawable/ic_occupation"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/universityEditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="University/Institution"
            android:inputType="text"
            android:drawableStart="@drawable/ic_institution"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Location"
            android:inputType="text"
            android:drawableStart="@drawable/ic_location"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/hobbyEditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Hobby"
            android:inputType="text"
            android:drawableStart="@drawable/ic_hobby"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#2DBE78"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Add an empty view to fill remaining space -->


</LinearLayout>

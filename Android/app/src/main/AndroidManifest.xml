<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.front" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProductivityPilot"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ProductivityPilot.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ProductivityPilot"/>
        <activity
            android:name=".ProductiveCameraActivity"
            android:exported="false"
            android:theme="@style/Theme.ProductivityPilot"/>
        <activity
            android:name=".SignIn"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProductivityPilot" />
        <activity
            android:name=".SignUpDetails"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProductivityPilot" />
        <activity
            android:name=".ProfileFragment"
            android:label="Profile"
            android:theme="@style/Theme.ProductivityPilot" />
        <activity
            android:name=".NavigationActivity"
            android:label="Navigation"
            android:theme="@style/Theme.ProductivityPilot" />
        <activity
            android:name=".StatisticFragment"
            android:label="Statistics"
            android:theme="@style/Theme.ProductivityPilot" />
        <activity
            android:name=".Productive"
            android:label="Productive"
            android:theme="@style/Theme.ProductivityPilot" />
        <activity
            android:name=".HomeFragment"
            android:label="Home"
            android:theme="@style/Theme.ProductivityPilot" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>